<div class="neuroshima roll-card opposed-handler" data-request-id="{{requestId}}">
    <header class="roll-header">
        <div class="weapon-title">
            {{localize "NEUROSHIMA.MeleeOpposed.Title"}}
        </div>
        <div class="test-type">
            {{#if (eq status "waiting")}}
                {{localize "NEUROSHIMA.MeleeOpposed.WaitingForDefense"}}
            {{else if (eq status "ready")}}
                {{localize "NEUROSHIMA.MeleeOpposed.ReadyToResolve"}}
            {{else if (eq status "resolved")}}
                {{localize "NEUROSHIMA.MeleeOpposed.Resolved"}}
            {{/if}}
        </div>
    </header>
    
    <div class="opposed-context-flex">
        <div class="participant attacker">
            <img src="{{attacker.img}}" title="{{attacker.name}}"/>
            <span class="name">{{attacker.name}}</span>
            <span class="role">{{localize "NEUROSHIMA.MeleeOpposed.Attacker"}}</span>
        </div>
        
        <div class="vs-divider">
            <span class="vs-text">VS</span>
            <i class="fas fa-swords"></i>
        </div>
        
        <div class="participant defender">
            <img src="{{defender.img}}" title="{{defender.name}}"/>
            <span class="name">{{defender.name}}</span>
            <span class="role">{{localize "NEUROSHIMA.MeleeOpposed.Defender"}}</span>
        </div>
    </div>

    <hr class="dotted-hr">

    <div class="opposed-actions">
        {{#if (eq status "waiting")}}
            <button type="button" class="opposed-response-button" data-action="clickOpposedResponse">
                <i class="fas fa-shield-alt"></i> {{localize "NEUROSHIMA.MeleeDefense.Button"}}
            </button>
        {{else if (eq status "ready")}}
            {{#if isGM}}
                <button type="button" class="resolve-opposed-button" data-action="resolveOpposed">
                    <i class="fas fa-gavel"></i> {{localize "NEUROSHIMA.MeleeOpposed.Resolve"}}
                </button>
            {{else}}
                <div class="status-msg ready">
                    <i class="fas fa-check-circle"></i> {{localize "NEUROSHIMA.MeleeOpposed.ReadyToResolve"}}
                </div>
            {{/if}}
        {{else if (eq status "resolved")}}
            <div class="status-msg resolved">
                <i class="fas fa-flag-checkered"></i> {{localize "NEUROSHIMA.MeleeOpposed.Resolved"}}
            </div>
        {{/if}}
    </div>
</div>
